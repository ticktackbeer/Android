<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wood"
    tools:context=".DesignV1.Anmeldeauswahl">

    <TextView
        android:id="@+id/topic_Anmeldung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Anmeldung"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    // E-Mail

    <ImageView
        android:id="@+id/image_Anmeldung"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/topic_Anmeldung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/topic_Anmeldung"
        app:layout_constraintTop_toTopOf="@+id/topic_Anmeldung"
        app:srcCompat="@drawable/anstossen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_Email"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:paddingLeft="90dp"
        android:text="Weiter mit Email"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    // Facebook

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_Facebook"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/com_facebook_messenger_blue"
        android:drawableLeft="@drawable/ic_facebook_logo_2019"
        android:paddingLeft="90dp"
        android:text="Weiter mit Facebook"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/button_Email"
        app:layout_constraintEnd_toEndOf="@+id/button_Google"
        app:layout_constraintStart_toStartOf="@+id/button_Google"
        app:layout_constraintTop_toBottomOf="@+id/image_Anmeldung"
        app:layout_constraintVertical_bias="1.0" />

    // Google

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_Google"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_google"
        android:paddingLeft="90dp"
        android:text="Weiter mit Google"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/button_Facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_Anmeldung"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_Kontakt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hast du Probleme beim Einloggen? Salud Amigos kontaktieren"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_Email"
        app:layout_constraintStart_toStartOf="@+id/button_Email"
        app:layout_constraintTop_toBottomOf="@+id/button_Email" />



</androidx.constraintlayout.widget.ConstraintLayout>

<!--    android:text="Google" android:text="Facebook"-->